<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/header') %>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto p-5">
      <div
        class="relative w-300 h-[700px] bg-red-600 rounded-lg border-4 border-black p-4 shadow-2xl"
      >
        <!-- Top Section -->
        <div class="relative flex items-center justify-between p-2">
          <div
            class="w-10 h-10 bg-blue-400 border-2 border-black rounded-full"
          ></div>
          <h1 class="text-3xl font-bold text-center mb-5">Pok√©dex</h1>
          <div
            class="w-6 h-6 bg-white border-2 border-black rounded-full"
          ></div>
        </div>

        <!-- Screen -->
        <div
          class="w-full bg-[url('https://th.bing.com/th/id/OIP.g7nBBVBsckYQuo2KlPMbkgHaEK?rs=1&pid=ImgDetMain')] bg-cover bg-center bg-no-repeat border-4 border-black rounded-lg mt-2"
        >
          <div class="container mx-auto flex justify-center">
            <div class="flex flex-row items-center gap-5">
              <!-- Pok√©mon Details -->
              <div
                class="flex flex-col space-y-3 text-center bg-white p-5 rounded-lg border-4 border-black"
              >
                <!-- Pok√©mon Name Centered -->
                <div class="flex justify-center items-center w-full">
                  <h1 class="text-3xl font-bold text-center capitalize">
                    <%= pokemon.name %>
                  </h1>
                </div>
                <!-- Pok√©mon Type - Centered -->
                <div class="flex justify-center gap-2">
                  <% pokemon.types.forEach(t => { %>
                  <span
                    class="px-3 py-1 rounded-lg text-white font-semibold <% if (t.type.name === 'fire') { %> bg-orange-500 <% } %> <% if (t.type.name === 'water') { %> bg-blue-500 <% } %> <% if (t.type.name === 'grass') { %> bg-green-500 <% } %> <% if (t.type.name === 'electric') { %> bg-yellow-400 text-black <% } %> <% if (t.type.name === 'ice') { %> bg-cyan-300 text-black <% } %> <% if (t.type.name === 'fighting') { %> bg-red-700 <% } %> <% if (t.type.name === 'poison') { %> bg-purple-500 <% } %> <% if (t.type.name === 'ground') { %> bg-yellow-700 <% } %> <% if (t.type.name === 'flying') { %> bg-indigo-400 <% } %> <% if (t.type.name === 'psychic') { %> bg-pink-500 <% } %> <% if (t.type.name === 'bug') { %> bg-lime-500 <% } %> <% if (t.type.name === 'rock') { %> bg-gray-700 <% } %> <% if (t.type.name === 'ghost') { %> bg-purple-800 <% } %> <% if (t.type.name === 'dragon') { %> bg-indigo-700 <% } %> <% if (t.type.name === 'dark') { %> bg-gray-900 <% } %> <% if (t.type.name === 'steel') { %> bg-gray-500 <% } %> <% if (t.type.name === 'fairy') { %> bg-pink-300 <% } %>"
                  >
                    <%= t.type.name.toUpperCase() %>
                  </span>
                  <% }); %>
                </div>

                <!-- Pok√©mon Details in Two Columns -->
                <div
                  class="grid grid-cols-2 gap-4 text-lg font-semibold text-left"
                >
                  <div class="flex items-center gap-2">
                    <span>üìè</span>
                    <p>
                      Height:
                      <span class="text-blue-600"><%= pokemon.height %></span>
                    </p>
                  </div>
                  <div class="flex items-center gap-2">
                    <span>‚öñÔ∏è</span>
                    <p>
                      Weight:
                      <span class="text-blue-600"><%= pokemon.weight %></span>
                    </p>
                  </div>
                  <div class="flex items-center gap-2">
                    <span>‚ù§Ô∏è</span>
                    <p>
                      HP:
                      <span class="text-red-600"
                        ><%= pokemon.stats[0].base_stat %></span
                      >
                    </p>
                  </div>
                  <div class="flex items-center gap-2">
                    <span>‚öîÔ∏è</span>
                    <p>
                      Attack:
                      <span class="text-red-600"
                        ><%= pokemon.stats[1].base_stat %></span
                      >
                    </p>
                  </div>
                  <div class="flex items-center gap-2">
                    <span>üõ°Ô∏è</span>
                    <p>
                      Defense:
                      <span class="text-green-600"
                        ><%= pokemon.stats[2].base_stat %></span
                      >
                    </p>
                  </div>
                  <div class="flex items-center gap-2">
                    <span>üî•</span>
                    <p>
                      Special Attack:
                      <span class="text-orange-600"
                        ><%= pokemon.stats[3].base_stat %></span
                      >
                    </p>
                  </div>
                  <div class="flex items-center gap-2">
                    <span>üåÄ</span>
                    <p>
                      Special Defense:
                      <span class="text-purple-600"
                        ><%= pokemon.stats[4].base_stat %></span
                      >
                    </p>
                  </div>
                  <div class="flex items-center gap-2">
                    <span>‚ö°</span>
                    <p>
                      Speed:
                      <span class="text-yellow-500"
                        ><%= pokemon.stats[5].base_stat %></span
                      >
                    </p>
                  </div>
                </div>
              </div>

              <!-- Pok√©mon Image -->
              <img
                src="<%= pokemon.sprites.front_default %>"
                alt="<%= pokemon.name %>"
                class="w-95 h-95 mx-auto drop-shadow-lg"
              />
            </div>
          </div>
        </div>

        <!-- Bottom Section -->
        <div
          class="mt-4 p-2 bg-green-600 border-4 border-black rounded-lg text-black text-sm font-bold"
        >
          <!-- Controls -->
          <div class="flex justify-between items-center mt-4">
            <!-- D-Pad -->
            <div class="grid grid-cols-3 gap-1">
              <div></div>
              <div class="w-6 h-6 bg-black"></div>
              <div></div>
              <div class="w-6 h-6 bg-black"></div>
              <div class="w-6 h-6"></div>
              <div class="w-6 h-6 bg-black"></div>
              <div></div>
              <div class="w-6 h-6 bg-black"></div>
              <div></div>
            </div>

            <!-- Back Button -->
            <div class="text-center mt-5">
              <a
                href="/"
                class="px-6 py-3 bg-blue-500 text-white text-lg rounded-lg"
              >
                Back
              </a>
            </div>

            <!-- Buttons -->
            <div class="flex flex-col gap-2">
              <div
                class="w-6 h-6 bg-red-500 border border-black rounded-full"
              ></div>
              <div
                class="w-6 h-6 bg-green-500 border border-black rounded-full"
              ></div>
            </div>
          </div>
        </div>

        <!-- Footer Inside the Red Div -->
        <div class="mt-4 text-center text-white">
          <%- include("../partials/footer") %>
        </div>
      </div>
    </div>
  </body>
</html>
